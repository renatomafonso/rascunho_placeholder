<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/branco_branco"
    tools:context="com.rma.placeholder.rascunho_placeholder.view.MainActivity"
    android:orientation="vertical">

    <com.rma.placeholder.rascunho_placeholder.util.SlidingTabLayout
        android:id="@+id/st1_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/corTextoAbas"
        android:background="@color/colorPrimary"></com.rma.placeholder.rascunho_placeholder.util.SlidingTabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_pagina"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></android.support.v4.view.ViewPager>

</LinearLayout>